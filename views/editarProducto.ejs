

<%- include("templates/encabezado") %>
    <h1>Editar de producto: </h1>
    <div class="contenedor">
        <form action="/editarProducto" method="post" id="formulario">
            <input type="hidden" autofocus value="<%= idproductos %>" name="idproductos" id="idproductos" type="text" placeholder="id">
            <label for="producto">Producto:</label><span class="ocultar errorNombre">Producto no valido</span>
            <input autofocus value="<%= producto %>" name="producto" id="producto" type="text" placeholder="producto">
            <i class="ocultar xmarkErrorNombre fa-regular fa-circle-xmark"></i>
            <i class="ocultar checkMarkNombre fa-regular fa-circle-check"></i>

            <label for="descripcion">Descripcion: </label><span class="ocultar errorCelular">Descripcion no valida</span>
            <input value="<%= descripcion %>" name="descripcion" id="descripcion" type="text" placeholder="descripcion">
            <i class="ocultar xmarkErrorCelular fa-regular fa-circle-xmark"></i>
            <i class="ocultar checkMarkCelular fa-regular fa-circle-check"></i>

            <label for="precio">precio: </label><span class="ocultar errorCorreo">Precio no valido</span>
            <input value="<%= precio %>" name="precio" id="precio" type="text" placeholder="precio">
            <i class="ocultar xmarkErrorCorreo fa-regular fa-circle-xmark"></i>
            <i class="ocultar checkMarkCorreo fa-regular fa-circle-check"></i>
            <button type="submit">Editar datos</button>
        </form>
    </div>

    <%- include("templates/pie") %>